<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pcwk.ehr.AdminTermsofuseDao">
    <resultMap type="AdminPageVO" id="AdminPageVOMap">
        <id 	property="no" 				column="no"/>
        <result property="identifier" 		column="identifier"/>
        <result property="subject" 			column="subject"/>
        <result property="context" 			column="context"/>
        <result property="registrationDate" column="registrationDate"/>
    </resultMap>
    
    <select id="doRetrieveTermsofuse" parameterType="AdminPageVO" resultMap="AdminPageVOMap">
        SELECT  no,
                identifier,
                subject,
                context,
                DECODE( TO_CHAR(registration_date,'YYYYMMDD'),TO_CHAR(sysdate,'YYYYMMDD'),
                        TO_CHAR(registration_date,'HH24:MI'),
                        TO_CHAR(registration_date,'YYYY/MM/DD')) AS registrationDate
        FROM termsofuse
        ORDER BY no
    </select>
</mapper>